{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/app/Components/*"],
      "@/assets/*": ["./src/app/assets/*"],
      "@/data/*": ["./src/app/Data/*"],
      "@/public/*": ["./public/*"]
    },
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".next", "out"]
}
